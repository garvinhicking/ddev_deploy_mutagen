{
  "name": "faktore/ddev-deployment-mutagen",

  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.typo3.org/"
    }
  ],

  "require": {
    "typo3/minimal": "^11.5",

    "typo3/cms-fluid-styled-content": "^11.5",
    "typo3/cms-info": "^11.5",
    "typo3/cms-recycler": "^11.5",
    "typo3/cms-reports": "^11.5",
    "typo3/cms-rte-ckeditor": "^11.5",
    "typo3/cms-scheduler": "^11.5",
    "typo3/cms-setup": "^11.5",
    "typo3/cms-tstemplate": "^11.5",
    "typo3/cms-belog": "^11.5",
    "typo3/cms-beuser": "^11.5",
    "typo3/cms-adminpanel": "^11.5",
    "typo3/cms-filemetadata": "^11.5",
    "typo3/cms-viewpage": "^11.5",
    "typo3/cms-lowlevel": "^11.5",
    "typo3/cms-redirects": "^11.5",
    "typo3/cms-seo": "^11.5",
    "typo3/cms-dashboard": "^11.5",
    "typo3/cms-felogin": "^11.5",
    "typo3/cms-form": "^11.5",

    "helhum/dotenv-connector": "^3.0",
    "helhum/typo3-console": "^7.1",

    "ext-mysqli": "*",
    "ext-pdo": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-simplexml": "*"
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": "htdocs"
    },
    "helhum/dotenv-connector": {
      "env-file": ".env"
    }
  },
  "config": {
    "platform": {
      "php": "8.1"
    },
    "allow-plugins": {
      "typo3/cms-composer-installers": true,
      "typo3/class-alias-loader": true,
      "helhum/typo3-console-plugin": true,
      "helhum/dotenv-connector": true
    }
  }
}
